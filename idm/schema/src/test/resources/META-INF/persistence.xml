<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">
    <persistence-unit name="jpa-identity-store-tests-pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        
        <class>org.picketlink.idm.jpa.schema.DatabaseUser</class>
        <class>org.picketlink.idm.jpa.schema.DatabaseUserAttribute</class>
        
        <class>org.picketlink.idm.jpa.schema.DatabaseRole</class>
        <class>org.picketlink.idm.jpa.schema.DatabaseRoleAttribute</class>

        <class>org.picketlink.idm.jpa.schema.DatabaseGroup</class>
        <class>org.picketlink.idm.jpa.schema.DatabaseGroupAttribute</class>
        
        <class>org.picketlink.idm.jpa.schema.DatabaseMembership</class>
        
        <properties>
            <property name="hibernate.connection.url" value="jdbc:h2:mem:test"/>
            <property name="hibernate.connection.driver_class" value="org.h2.Driver"/>
            <property name="hibernate.connection.username" value="sa"/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>
