<PicketLink xmlns="urn:picketlink:identity-federation:config:2.1">

  <!-- Start of IDM configuration -->
  <PicketLinkIDM>
    <named value="SIMPLE_JPA_STORE_CONFIG">
      <stores>
        <jpa>
          <mappedEntity
              value1="org.picketlink.idm.jpa.model.sample.simple.AttributedTypeEntity"
              value2="org.picketlink.idm.jpa.model.sample.simple.AccountTypeEntity"
              value3="org.picketlink.test.idm.basic.MyCustomAccountEntity"
              value4="org.picketlink.idm.jpa.model.sample.simple.RoleTypeEntity"
              value5="org.picketlink.idm.jpa.model.sample.simple.GroupTypeEntity"
              value6="org.picketlink.idm.jpa.model.sample.simple.IdentityTypeEntity"
              value7="org.picketlink.idm.jpa.model.sample.simple.RelationshipTypeEntity"
              value8="org.picketlink.idm.jpa.model.sample.simple.RelationshipIdentityTypeEntity"
              value9="org.picketlink.idm.jpa.model.sample.simple.PartitionTypeEntity"
              value10="org.picketlink.idm.jpa.model.sample.simple.PasswordCredentialTypeEntity"
              value11="org.picketlink.idm.jpa.model.sample.simple.DigestCredentialTypeEntity"
              value12="org.picketlink.idm.jpa.model.sample.simple.X509CredentialTypeEntity"
              value13="org.picketlink.idm.jpa.model.sample.simple.OTPCredentialTypeEntity"
              value14="org.picketlink.idm.jpa.model.sample.simple.AttributeTypeEntity"
              value15="org.picketlink.test.idm.partition.CustomPartitionEntity" />
          <supportGlobalRelationship value="org.picketlink.idm.model.Relationship" />
          <supportAllFeatures />
          <!-- JPAContextInitializer needs to be added programmatically later -->
        </jpa>
      </stores>
    </named>
  </PicketLinkIDM>

</PicketLink>

