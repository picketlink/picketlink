<assembly>
  <id>picketlink-tomcat7</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <!-- filesets are in reverse order in sense of inheritance, because assembly plugin never overwrites already added file. -->
    <fileSet>
      <directory>${basedir}/../picketlink-tomcat7/target/classes/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../picketlink-tomcat-common/target/classes/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../picketlink-core/target/classes/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
